<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/black"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/text_view_first_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="How much winston xStyle blue?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edit_text_first_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/text_view_first_question"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey_200"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_view_second_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="How much winston xStyle blue?"
        app:layout_constraintTop_toBottomOf="@id/edit_text_first_answer"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edit_text_second_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/text_view_second_question"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey_200"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edit_text_passport_inn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:hint="Enter passport inn"
        app:layout_constraintTop_toBottomOf="@id/edit_text_second_answer"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey_200"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonPanel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="enter"
        android:textSize="36sp"
        android:layout_margin="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_passport_inn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>